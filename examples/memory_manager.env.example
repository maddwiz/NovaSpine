# Enable policy-managed reasoning writes
C3AE_MEMORY_MANAGER_ENABLED=1
C3AE_MEMORY_MANAGER_USE_LLM_POLICY=1

# Fallback heuristic thresholds (used when LLM policy is disabled/unavailable)
C3AE_MEMORY_MANAGER_UPDATE_THRESHOLD=0.84
C3AE_MEMORY_MANAGER_NOOP_THRESHOLD=0.945

# LLM routing backend
# Supported: venice | openai | anthropic | ollama
C3AE_MEMORY_MANAGER_PROVIDER=openai
C3AE_MEMORY_MANAGER_MODEL=gpt-4.1-mini
C3AE_MEMORY_MANAGER_TEMPERATURE=0
C3AE_MEMORY_MANAGER_MAX_TOKENS=256

# Provider API keys (set only the one you use)
# OPENAI_API_KEY=...
# ANTHROPIC_API_KEY=...
# VENICE_API_KEY=...
